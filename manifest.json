{
    "name": "Echo360 Downloader",
    "version": "0.1.0",
    "description": "Chrome extension to download Echo360 videos",
    "background": {
        "scripts": ["hls.js", "background.js"],
        "persistent": false
    },
    "content_scripts": [{
        "matches": ["*://*.streaming.sydney.edu.au/*"],
        "js": ["hls.js", "contentScript.js"],
        "run_at": "document_idle"
    }],
    "page_action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "declarativeContent",
    ],
    "manifest_version": 2
}
