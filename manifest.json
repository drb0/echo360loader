{
    "name": "Echo360 Loader",
    "version": "1.0.0",
    "description": "Chrome extension to load USYD Echo360 videos without Flash",
    "background": {
        "scripts": ["hls.js", "background.js"],
        "persistent": false
    },
    "content_scripts": [{
        "matches": ["*://*.streaming.sydney.edu.au/*"],
        "js": ["hls.js", "contentScript.js"],
        "run_at": "document_idle"
    }, {
        "matches": ["http://delivery.streaming.sydney.edu.au/*"],
        "js": ["fixes.js"],
        "run_at": "document_end"
    }],
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon/icon16.png",
            "24": "icon/icon24.png",
            "32": "icon/icon32.png"
        }
    },
    "permissions": [
        "declarativeContent"
    ],
    "icons": {
        "16": "icon/icon16.png",
        "48": "icon/icon48.png",
        "128": "icon/icon128.png"
    },
    "manifest_version": 2
}
